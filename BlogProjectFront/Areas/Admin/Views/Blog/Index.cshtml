@model List<BlogListModel>

<a asp-action="Create" asp-controller="Blog" asp-area="Admin" class="btn btn-outline-info bt-sm my-2">Add New Blog</a>
<table class="table table-bordered table-hover table-sm">
    <tbody>
        <tr>
            <th>Title</th>
            <th>Categories Operations</th>
            <th>Operations</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-action="AssignCategory" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Assign Category</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>    
        }
    </tbody>
</table>