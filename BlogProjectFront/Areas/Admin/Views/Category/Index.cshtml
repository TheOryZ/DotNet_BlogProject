@model List<CategoryListModel>

<a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-info bt-sm">Add New Category</a>
<table class="table table-bordered table-hover">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>    
        }
    </tbody>
</table>